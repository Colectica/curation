@model Colectica.Curation.Web.Models.UserInfoModel

@if (Model.IsOrgAdmin ||
    Model.IsSiteAdministrator &&
    Model.Organization != null)
{
    <li class="sidebar-list">
        <a href="@Url.Action("Details", "Organization", new { id = Model.Organization.Id } )">Organization Admin <span class="menu-icon glyphicon glyphicon-tower"></span></a>
    </li>

    <li class="sidebar-list">
        <a href="https://docs.colectica.com/curation/org-admin/">Administrator Guide <span class="menu-icon glyphicon glyphicon-book"></span></a>
    </li>
}

@if (Model.IsSiteAdministrator)
{
    <li class="sidebar-list">
        <a href="/Admin">
            Site Admin
            <span class="menu-icon glyphicon glyphicon-cog"></span>
        </a>
    </li>

    <li class="sidebar-list">
        <a href="https://docs.colectica.com/curation/site-admin/">Site Admin Guide <span class="menu-icon glyphicon glyphicon-book"></span></a>
    </li>
}
