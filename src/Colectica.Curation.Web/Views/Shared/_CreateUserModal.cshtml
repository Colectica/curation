<div class="modal" id="createAuthorModal" tabindex="-1" role="dialog" aria-labelledby="createAuthorLabel" aria-hidden="true">
    <div class="modal-dialog" data-bind="with: peopleInput().newPerson">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="createAuthorLabel">Create Author</h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal" role="form">

                    <div data-bind="visible: errorMessage() !== ''" >
                        <p><span data-bind="text: errorMessage" class="label label-danger"></span></p>
                    </div>

                    <div class="form-group">
                        <label class="col-md-2 control-label" for="FirstName">First Name</label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" data-bind="value: firstName" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-2 control-label" for="LastName">Last Name</label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" data-bind="value: lastName" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-2 control-label" for="Affiliation">Affiliation</label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" data-bind="value: affiliation" />
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="col-md-2 control-label" for="Email">Email</label>
                        <div class="col-md-10">
                            <input type="email" class="form-control" data-bind="value: email" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-2 control-label" for="ORCID">ORCID</label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" data-bind="value: orcid" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bind="click: $root.peopleInput().createNewPlaceholderAccount">Create</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>