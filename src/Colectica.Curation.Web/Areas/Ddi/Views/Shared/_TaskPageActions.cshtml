@model Colectica.Curation.Models.ScriptedTaskModel

<div id="approve-modal" class="modal" tabindex="-1" role="dialog" aria-labelledby="approve-modal-label" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            @using (Html.BeginForm("Details", Model.Task.Controller, new { id = Model.FileId }, FormMethod.Post))
            {
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h3 id="approve-modal-header">Approve</h3>
                </div>

                <div class="modal-body">

                    <p>Please enter any additional notes about this curation task.</p>
                    <div class="form-group">
                        <div>
                            <textarea class="form-control" name="notes" rows="3" placeholder="Notes"></textarea>
                        </div>
                    </div>

                </div>

                <div class="modal-footer">
                    <input type="submit" class="btn btn-primary" name="result" value="Accept" />
                    <input type="submit" class="btn btn-default" name="result" value="Not Applicable" />
                    <input type="submit" class="btn btn-danger" name="result" value="Reject" />
                </div>

            }
        </div>
    </div>
</div>
